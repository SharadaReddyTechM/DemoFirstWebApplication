        @Html.LabelFor(model => model.usertype, "usertype", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.usertype, new List<SelectListItem> { new SelectListItem { Text = "Admin", Value = "1" }, new SelectListItem { Text = "Faculty", Value = "2" }, new SelectListItem { Text = "Student", Value = "3" } }, "--Select the Usertype--", htmlAttributes: new { @class = "form-control" })
            @*@Html.EditorFor(model => model.usertype, new { htmlAttributes = new { @class = "form-control" } })*@
